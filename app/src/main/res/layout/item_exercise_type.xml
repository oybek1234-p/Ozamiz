<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/dimen_14"
    android:paddingHorizontal="@dimen/dimen_8"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"> <!-- Bosish effekti -->

    <ImageView
        android:id="@+id/iv_exercise_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/dimen_14"
        tools:src="@drawable/sport_ic" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_exercise_name"
            style="@style/Headline2_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?colorOnSurface"
            tools:text="Piyoda yurish" />

        <TextView
            android:id="@+id/tv_exercise_description"
            style="@style/Subtitle3_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="?colorOnSurfaceVariant"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Yog'larni yoqish, qon aylanishini yaxshilash uchun foydali." />

    </LinearLayout>

    <!-- Agar kerak bo'lsa, tanlash uchun > ikonkasini qo'shish mumkin -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right"
        app:tint="?colorOnSurfaceVariant"
        android:layout_marginStart="@dimen/dimen_8"/>

</LinearLayout>